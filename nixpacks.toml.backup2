[phases.setup]
nixPkgs = ["python311", "python311Packages.pip", "nodejs_18"]

[phases.install]
cmds = [
    "pip install -r requirements.txt --break-system-packages",
    "timeout 120 npm install --force --no-audit --no-fund --no-optional --legacy-peer-deps || echo 'npm failed but continuing'"
]

[start]
cmd = "python start.py"
